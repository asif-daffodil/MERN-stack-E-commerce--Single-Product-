# Copy this file to `.env` (same folder as backend/server.js expects) and fill in real values.
# This repo loads env via `dotenv` in backend/server.js.

# Express server port
PORT=4000

# API version used for route prefix: /api/v${API_VERSION}
API_VERSION=1.0.0

# MongoDB connection string
# Local example:
# MONGODB_URI=mongodb://127.0.0.1:27017/your_db_name
# Atlas example:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority
MONGODB_URI=mongodb://127.0.0.1:27017/mern_single_product

# JWT config (required for admin auth)
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=7d

# Default admin bootstrap (created automatically if missing)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123
